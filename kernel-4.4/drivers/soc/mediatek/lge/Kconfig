config MACH_LGE
	bool

menu "LGE Board Selection"

config MACH_MT6739_LG_PROJECT
	bool "MT6739 LG PROJECT"
	depends on MACH_MT6739
	select MACH_LGE
	help
		Support for the MTK MT6739 LG device

config MACH_MT6739_MH6
	bool "MT6739 MH6"
	depends on MACH_MT6739
	select MACH_MT6739_LG_PROJECT
	
